    0%
        transform translate(50%, 50%)
    15.625%
        transform translate(50%, calc(50% - 75vh)) scale(0.5)
    25%
        transform translate(50%, calc(50% - 50vh)) scale(0.25)
    46.875%
        transform translate(50%, calc(50% - 50vh)) scale(0.25)
    59.375%
        transform translate(50%, calc(50% - 37.5vh)) scale(0.25)
    68.75%
        transform translate(50%, calc(50% - 40.625vh)) scale(0.25)
    78.125%
        transform translate(50%, calc(50% - 37.5vh)) scale(0.25)
    100%
        transform translate(50%, calc(50% - 37.5vh)) scale(0.25)