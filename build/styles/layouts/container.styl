.container
    position absolute
    full-size()
    img
        position absolute
        &.left,
        &.right
            width auto
            height 100%
        &.left
            top 0
        &.right
            top 0
        &.top,
        &.bottom
            width 100%
            height auto
        &.top
            left 0
        &.bottom
            left 0
        &.map
            left 50%
            top 0
            width auto
            height 100%
            transform translateX(-50%)
            z-index 2
        &.crush
            left 0
            top 0
            opacity 0
            will-change transform, opacity
            z-index 3
    .character
        position absolute
        overflow hidden
    .character,
    .sprite
        will-change transform
        z-index 4